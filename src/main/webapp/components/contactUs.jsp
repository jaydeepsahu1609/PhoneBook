<div class="container">
	<div class="container-left">
	<img alt="contactus-img" src="components/img/contactus.jfif" class="img img-responsive">
	</div>

	<div class="container-right contact-us-form">
		<div class="card">
			<div class="text-center">
				<h3 class="card-title text-success mt-3">
					<i class="fas fa-phone-volume text-primary"></i>&nbsp;Fill the form to contact us
				</h3>
			</div>

			<div class="card-body">
				<form class="form-control" autocomplete="on">
					<input type="text" class="form-control" name="name"
						placeholder="Your Name *" required> <br> <input
						type="email" class="form-control" name="email"
						placeholder="Your Email-ID *" required> <br> <input
						type="text" class="form-control" name="subject"
						placeholder="Subject *" required> <br>
					<textarea rows="5" cols="30" class="form-control"
						placeholder="Body (Minimum 50 words) *"></textarea>
					<hr>
					<div class="text-center">
						<button type="submit" class="btn btn-dark btn-lg mb-3">
							<i class="fas fa-paper-plane text-success"></i>&nbsp;Send Mail
						</button>
					</div>
				</form>
			</div>
		</div>

	</div>
	<br>

</div>